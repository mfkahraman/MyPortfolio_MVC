@model MyPortfolio_MVC.Models.Banner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Banner Güncelleme Sayfası</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />

    <label>Aktif/Pasif</label>
    @Html.DropDownListFor(x => x.IsShown,
        new SelectList(new List<SelectListItem>
        {
            new SelectListItem { Text = "Aktif", Value = "True" },
            new SelectListItem { Text = "Pasif", Value = "False" }
        }, "Value", "Text", Model.IsShown),
        new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>
</form>

