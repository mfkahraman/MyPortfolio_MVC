@model MyPortfolio_MVC.Models.Banner
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Yeni Banner Ekleme Sayfası</h2>

<form method="post">
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
    <br />
</form>