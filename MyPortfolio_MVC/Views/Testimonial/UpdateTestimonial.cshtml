@model MyPortfolio_MVC.Models.Testimonial

@{
    ViewBag.Title = "Referans Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Referans Güncelle</h2>

@using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)

        @Html.LabelFor(model => model.NameSurname)
        @Html.TextBoxFor(model => model.NameSurname, new { @class = "form-control", placeholder = "Ad ve Soyad" })
        @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Unvan" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comment)
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = "Yorum", rows = 4 })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Mevcut Görsel")
        <br />
        <img src="@Model.ImageUrl" alt="Mevcut Görsel" class="img-thumbnail" style="width:150px; height:auto;" />
    </div>

    <div class="form-group">
        @Html.Label("Yeni Görsel Yükle (Opsiyonel)")
        <input type="file" name="ImageFile" class="form-control" />
        @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("Index", "Testimonial")" class="btn btn-secondary">Geri</a>
}
