@model List<MyPortfolio_MVC.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<h2>Hakkımda</h2>

<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>FotoUrl</th>
            <th>CvUrl</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>
                <td>@item.CvUrl</td>
                <td><a href="/About/DeleteAbout/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
            </tr>

        }
    </tbody>
</table>
<br />
<a href="/About/CreateAbout" class="btn btn-outline-success">Yeni Hakkımda Ekle</a>

