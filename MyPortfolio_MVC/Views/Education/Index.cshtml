@model List<MyPortfolio_MVC.Models.Education>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Eğitim Hayatım</h2>

<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Okul Adı</th>
        <th>Bölüm</th>
        <th>Başlangıç</th>
        <th>Bitiş</th>
        <th>Derece</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

@foreach (var item in Model)
{
    count++;
    <tr>
    <th>@item</th>
    <td>@item.SchoolName</td>
    <td>@item.Department</td>
    <td>@item.StartDate.Value.ToShortDateString()</td>
    <td>@(String.IsNullOrEmpty(item.EndDate?.ToString()) ? "Devam ediyor" : item.EndDate?.ToShortDateString())</td>
    <td>@item.Degree</td>
    <td><a href="/Education/DeleteEducation/@item.Id" class="btn btn-outline-danger">Sil</a></td>
    <td><a href="/Education/UpdateEducation/@item.Id" class="btn btn-outline-danger">Güncelle</a></td>
    </tr>
}
</table>
<br />
<a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Ekle</a>