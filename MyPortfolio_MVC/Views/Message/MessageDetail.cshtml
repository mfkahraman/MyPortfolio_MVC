@model MyPortfolio_MVC.Models.Message

@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-5">
    <div class="message-detail-card shadow-lg p-4">
        <h2 class="message-title">@Model.Subject</h2>

        <div class="message-info">
            <p><strong>Gönderen:</strong> <span>@Model.Name</span></p>
            <p><strong>E-posta:</strong> <span>@Model.Email</span></p>
            <p><strong>Mesaj İçeriği:</strong></p>
            <p class="message-content">@Model.MessageContent</p>
        </div>

        <div class="message-status">
            <strong>Durum:</strong>
            @if (Model.IsRead.HasValue && Model.IsRead.Value)
            {
                <span class="badge badge-success">Okundu</span>
            }
            else
            {
                <span class="badge badge-warning">Okunmadı</span>
            }
        </div>

        <div class="button-group">
            @if (!Model.IsRead.HasValue || !Model.IsRead.Value)
            {
                @Html.ActionLink("Okundu Yap", "MarkAsRead", new { id = Model.Id }, new { @class = "btn btn-success" })
            }
            <a href="@Url.Action("Index", "Message")" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #2c3e50; /* Daha koyu arka plan */
        color: #ecf0f1; /* Yazılar için açık renk */
    }

    .message-title {
        font-size: 32px;
        font-weight: bold;
        color: #ecf0f1; /* Açık yazı rengi */
        margin-bottom: 20px;
        text-align: center;
    }

    .message-detail-card {
        background-color: #34495e; /* Koyu gri arka plan */
        border-radius: 10px;
        border: 1px solid #2c3e50;
    }

    .message-info p {
        font-size: 16px;
        line-height: 1.6;
        color: #ecf0f1; /* Yazılar açık renk */
    }

    .message-info strong {
        color: #2980b9;
    }

    .message-info span {
        color: #bdc3c7; /* Daha açık metin */
    }

    .message-content {
        font-size: 16px;
        background-color: #1e2a37; /* Daha koyu arka plan */
        color: #ecf0f1; /* Yazılar açık renk */
        padding: 15px;
        border-radius: 5px;
        border: 1px solid #444;
        margin-top: 10px;
    }

    .message-status {
        margin-top: 20px;
        font-size: 18px;
        color: #ecf0f1; /* Yazılar açık renk */
    }

    .badge {
        font-size: 14px;
        padding: 5px 10px;
    }

    .badge-success {
        background-color: #27ae60;
    }

    .badge-warning {
        background-color: #f39c12;
    }

    .button-group {
        margin-top: 30px;
        text-align: center;
    }

    .btn {
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        margin: 5px;
    }

    .btn-success {
        background-color: #27ae60;
        border: none;
    }

        .btn-success:hover {
            background-color: #2ecc71;
        }

    .btn-secondary {
        background-color: #95a5a6;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #7f8c8d;
        }
</style>
