@model List<MyPortfolio_MVC.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Kategoriler</h2>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th> # </th>
            <th> Kategori Adı </th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>Default
                <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-outline-info">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>

<br />
<a href="/Category/CreateCategory" class="btn btn-success">Yeni Kategori Ekle</a>
