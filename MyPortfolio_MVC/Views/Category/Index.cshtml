@model IEnumerable<MyPortfolio_MVC.Models.Category>

@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    ViewBag.Title = "Kategori Listesi";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("CreateCategory")" class="btn btn-primary">Yeni Kategori Ekle</a>

@TempData["SuccessMessage"]
@TempData["ErrorMessage"]

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("UpdateCategory", new { id = category.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("DeleteCategory", new { id = category.Id })" class="btn btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>